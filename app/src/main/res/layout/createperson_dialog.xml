<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="50dp"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#282828">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CRIAÇÃO DE PERFIL"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="25dp"
                android:layout_marginTop="35dp"
                android:textColor="#b185fd"/>

            <EditText
                android:id="@+id/nickPerson"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="Seu nome/apelido"
                android:layout_marginHorizontal="50dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="#3f3f3f"
                android:textColor="@color/white"
                android:textColorHint="@color/lghtgrey"
                android:layout_marginVertical="30dp"
                android:paddingHorizontal="20dp"
                android:maxLines="1"
                />
            <Button
                android:id="@+id/createDone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CRIAR"
                android:layout_marginHorizontal="80dp"
                android:layout_marginBottom="35dp"
                android:backgroundTint="#cdadff"
                android:textColor="@color/darkgrey"/>



        </LinearLayout>

        <ImageButton
            android:id="@+id/closeDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/baseline_close_24"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@android:color/transparent"
            android:contentDescription="fechar"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>